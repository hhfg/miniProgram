<!--pages/books/books.wxml-->
<view wx:for="{{type}}" wx:key="typename">
  <view class="item" bindtap="bindClick" data-text="{{item.typecode}}" data-id="{{item.id}}">
    <view class="icon"><image src="../../icons/books/P.png" style="width:25px;height:25px;"></image></view>
    <view class="itemName">
      <view>{{item.typename}}</view>
    </view>
  </view>
  <view class="detailed {{item.isShow?'show':'hide'}}" hover-class="click" bindtap="bindChangeIt" wx:for="{{book}}" wx:for-item="itemName" wx:key="name" data-text="{{itemName.bookName}}">
  <view class="bookName">{{itemName.bookName}}</view>
  <view class="wordsNum">{{itemName.wordNum}}</view>
</view>
  <view class="hr"></view>
</view>


