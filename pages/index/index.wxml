<view wx:if="{{isHide}}">
  <view wx:if="{{canIUse}}" >
    <view class="headView">
      <view class="headImageView">
        <image class="headImage" src="../../icons/head/666.jpg" mode='scaleToFill'></image>
      </view>
      <view class="titleText">申请获取以下权限</view>
      <view class="contentText">获得你的公开信息(昵称,头像,手机等)</view>
      <button class="authBtn" type='primary' open-type='getUserInfo' bindgetuserinfo='bindGetUserInfo'>授权登录</button>
    </view>
  </view>
  <view wx:else>请升级微信版本</view>
</view>
 
<view wx:else>
  <view class="head">
    <view class="section_book">
      <view class="bookName">2019恋恋有词考研词汇</view>
      <view class="changeBook" bindtap="bindChangeBook">换书</view>
    </view>
    <view class="haveToLearn">
      <view>今日待学</view>
      <view>0/50</view>
    </view>
    <view class="section_learn">
      <view class="part">
        <view>累计学词</view>
        <view>111/1234</view>
      </view>
      <view class="part">
        <view>剩余天数</view>
        <view>12/60</view>
      </view>
    </view>
    <view class="start">
      <button class="btn" plain bindtap="bindReview">复习</button>
      <view class="hr"></view>
      <button class="btn" plain bindtap="bindRecite">开始背诵</button>
    </view>
  </view>
  <view class="other">
    <view class="content">
      <view class="item">
        <view><image class="icon" src="../../icons/index/pk.png"></image></view>
        <view>PK</view>
      </view>
      <view class="item">
        <view><image class="icon" src="../../icons/index/test.png"></image></view>
        <view>测试</view>
      </view>
      <view class="item">
        <view><image class="icon" src="../../icons/index/note.png"></image></view>
        <view>笔记本</view>
      </view>
      <view class="item" bindtap="bindSearch">
        <view><image class="icon" src="../../icons/index/search.png"></image></view>
        <view>查词</view>
      </view>
    </view>
  </view>
</view>


