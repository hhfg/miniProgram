page{
  height:100vh;
  background-color: #F5F5F5;
}
.headView{
  margin: 90rpx 50rpx 90rpx 50rpx;
}
.headImageView{
  text-align: center;
}
.headImage{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%; 
}
.titleText{
  margin-left: 25px;
  margin-top: 25px;
  margin-bottom: 10px;
  font-size: 14px;
  color: #020e0f;
  text-align: center;
}
.contentText{
  margin-left: 25px;
  margin-top: 0px;
  margin-bottom: 0px;
  font-size: 14px;
  color: #666;
  text-align: center;
}
.authBtn{
  margin-top: 35px;
  margin-left: 25px;
  margin-right: 25px;
  height: 45px;
  font-size: 17.5px;
}

.head{  
  background-color: white;
  padding: 60rpx;
}
.clock_in{
  display: flex;
  flex-direction: row;
}
.left{
  width: 50%;
}
.right{
  font-size: 12px;
  width: 50%;
  padding-top: 25px; 
  text-align: right;
}
.day{
  font-size: 40px;
  font-weight: bolder;
}
.book{
  margin-top: 30rpx;
  border-radius: 10px;
  color: white;
}
.bookName{
  padding:40rpx;
  font-size: 20px;
}
.tip{
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  font-size: 10px;
  
}
.fraction{
  float: right;
}
.progress{
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.taskSection{
  margin-top: 30rpx;
}
.taskSection text{
  display:flex;
  align-items:center;
  justify-content:center;
  font-size: 12px;
  color: gray;
}
.task{
  padding-top:15rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}
.num{
  font-size: 40px;
  font-weight: bolder;
}
.text1{
  font-size: 12px;
}
.desc{
  width: 50%;
}
.startBtn{
  margin-top: 30rpx; 
}
.btn{
  background-color: #87CEEB;
  color: white;
  border-radius: 20px;
}
.icon{
  width: 40px;
  height: 40px;
}
.content{
  background-color: white;
  margin-top:10rpx; 
  height: 20vh;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}
.item{
  width: 25%;
  font-size: 15px;
}