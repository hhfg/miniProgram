/* index//pkPage/pkPage.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #87CEEB;
}
.main{
  width: 100%;
  height: 100%;
}
.rival{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 10%;
}
.player1{
  position:fixed;
  left: 0;
}
.player2{
  position: fixed;
  right: 0;
}
.headPic{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.img1{
  margin: 10px;
  width: 140rpx;
  height:140rpx;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
}
.name{
  color: white;
}
.mess{
  justify-content: center;
  margin-top: 70%;
}
.wordPart{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* margin-top: 100px; */
  height: 90%;
}
.options{
  font-weight: 500;
  font-size: 15px;
  line-height: 100rpx;
  justify-content:center; 
  align-items:center;
  border-radius: 5px;
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis; 
  -webkit-box-orient: vertical;
  background-color: rgb(95, 190, 228);
}
.space{
  height: 15px;
}
.bgCanvas{
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  color:white;
}
.stepText{
  padding-top: 36px;
  font-weight: bold;
  font-size: 18px;
  color:white;
}
.canvass{
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  color:white;
}
.progress_bg{
  position: absolute;
  width:84px;
  height: 84px; 
}
.progress_canvas{
  width:84px;
  height: 84px; 
}