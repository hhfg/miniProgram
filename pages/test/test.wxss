page{
  width: 100%;
  height: 100%;
  background-color: #87CEEB;
}
.rival{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 20%;
}
.player1{
  position:fixed;
  left: 0;
}
.player2{
  position: fixed;
  right: 0;
}
.headPic{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.img1{
  margin: 10px;
  width: 140rpx;
  height:140rpx;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
}
.name{
  color: white;
}
.mess{
  justify-content: center;
  margin-top: 70%;
}
.progress_bg{
  position: absolute;
  width:84px;
  height: 84px; 
}
.progress_canvas{
  width:84px;
  height: 84px; 
}
