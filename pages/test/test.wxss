.options{
  font-weight: 500;
  font-size: 15px;
  line-height: 100rpx;
  justify-content:center; 
  align-items:center;
  border-radius: 5px;
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis; 
  -webkit-box-orient: vertical;
  background-color: rgb(95, 190, 228);
}
.ascore{
  transform: rotate(-90deg);
  position: fixed;
  right:0;
  border-radius: 10px;
  overflow: hidden;
}
.bscore{
  transform: rotate(-90deg);
  position: fixed;
  border-radius: 10px;
  overflow: hidden;
}
.space{
  height: 15px;
}


