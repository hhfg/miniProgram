page{
  width: 100%;
  height: 100%;
  background-color: #87CEEB;
}
.date{
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
  background-color:#00BFFF;
  color: white;
  font-size: 12px;
  padding: 5px;
  width: 15%;
}
.wordPart{
  margin: 5%;
  border-radius: 5px;
  font-size: 15px;
  display: flex;
  flex-direction: row;
  background-color: white;
  color: #1E90FF;
}
.word{
  padding: 7px;
  width: 90%;
}
.pron{
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  padding: 10px;
  width: 10%;
  background-color: #00BFFF;
  justify-content: center;
  align-items: center;
}