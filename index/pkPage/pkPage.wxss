/* index//pkPage/pkPage.wxss */
page{
  width: 100%;
  height: 100%;
}
.main{
  width: 100%;
  height: 100%;
}
.rival{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 10%;
}
.player1{
  position:fixed;
  left: 0;
}
.player2{
  position: fixed;
  right: 0;
}
.headPic{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color:#87CEFA;
}
.mess{
  justify-content: center;
  margin-top: 70%;
}
.wordPart{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* margin-top: 100px; */
  height: 90%;
}
.options{
  font-weight: 500;
  font-size: 15px;
  line-height: 100rpx;
  justify-content:center; 
  align-items:center;
  border-radius: 5px;
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis; 
  -webkit-box-orient: vertical;
}
.space{
  height: 15px;
}
.bgCanvas{
  width: 50px;
  height: 50px;
  margin:0 auto;
  position: absolute;
}
.stepText{
  padding-top: 14px;
  font-weight: bold;
  font-size: 18px;
  color:#87CEFA;
}